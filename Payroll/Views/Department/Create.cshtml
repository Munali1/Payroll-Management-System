@model Payroll.Domain.Entities.Department
@{
    ViewData["Title"] = "Add Department";
}

<div class="container">
    <div class="card">
        <h2 class="text-center">@ViewData["Title"]</h2>
        <div class="card-body">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="DepartmentName" class="form-label">Department Name</label>
                            <input type="text" asp-for="DepartmentName" class="form-control" />
                            <span asp-validation-for="DepartmentName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DepartmentEmail" class="form-label">Department Email</label>
                            <input type="email" asp-for="DepartmentEmail" class="form-control" />
                            <span asp-validation-for="DepartmentEmail" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DepartmentDescription" class="form-label">Department Description</label>
                            <input type="text" asp-for="DepartmentDescription" class="form-control" />
                            <span asp-validation-for="DepartmentDescription" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-outline-success">Add Department</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Return to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
