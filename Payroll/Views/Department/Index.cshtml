@model IEnumerable<Payroll.Domain.Entities.Department>
@{
    ViewData["Title"] = "Department List";
}
<div class="container">
    <h2 class="text-center">@ViewData["Title"]</h2>
    <div class="row">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Department Name</th>
                    <th>Department Email</th>
                    <th>Department Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dep in Model.Select((value, index) => new { value, index }))
                {
                    <tr>
                        <td>@(dep.index + 1)</td>
                        <td>@dep.value.DepartmentName</td>
                        <td>@dep.value.DepartmentEmail</td>
                        <td>@dep.value.DepartmentDescription</td>
                        <td>
                            
                            <a asp-controller="Department" asp-action="Edit" asp-route-id="@dep.value.DepartmentId" class="btn btn-outline-primary">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@dep.value.DepartmentId" onclick="return confirm('Are you sure you want to delete this record?');" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                            <a asp-controller="Department" asp-action="EmployeeList" asp-route-id="@dep.value.DepartmentId" class="btn btn-outline-primary">
                                <i class="bi bi-person-lines-fill"></i> View Employees
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
