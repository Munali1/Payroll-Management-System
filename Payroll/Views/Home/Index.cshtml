@using Microsoft.AspNetCore.Identity
@using Payroll.Domain.Entities

@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Home Page";
}
@if (!SignInManager.IsSignedIn(User)){
    <div class="card text-center mx-auto mt-5" style="max-width: 600px;">
        <div class="card-body">
            <h1 class="mb-3">Welcome to Payroll Management System</h1>
            <h3 class="mb-4">Please Login to proceed further</h3>
            <div class="d-flex justify-content-center gap-3">
                <a class="btn btn-outline-primary px-4" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </div>
        </div>
    </div>
}
else{


}

